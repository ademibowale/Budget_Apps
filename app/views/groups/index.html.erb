<div class="container">
  <div class="total d-flex pt-2 pb-3 justify-content-between">
    <h4> Overall Budget: </h4>
    <h4> <%= number_to_currency(@expenses.sum(&:amount)) %> </h4>
  </div>

  <% if @groups.count > 0 %>
    <% @groups.each do |group| %>
    <div class="card mb-4 px-3 p-3 shadow mb-5 bg-body rounded">
      <%= link_to user_group_expenses_path(current_user, group.id), class: "text-decoration-none" do %>
        <div class="d-flex">
          <img src="<%= group.icon %>", alt="group_icon", width="100", height="100">
          <div class="card-title ms-5 d-flex justify-content-between w-100">
          <div>
            <h3 class="card-title border border-white rounded-3"> <%= group.name %> </h3>

            <span> <%= group.created_at.strftime("%B, %e at %H:%M") %> </span>
          </div>
          <div class="d-flex flex-column justify-content-between align-items-between gap-10">
            <span class="each-group-amount">Total Budget: $<%= group.expenses.sum(&:amount) %></span>
            <%= button_to "Delete Group", user_group_path(current_user, group), method: :delete, class: 'btn btn-primary p-2' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
<% else %>
  <span class="d-flex justify-content-center align-items shadow p-3 mb-5 bg-body rounded">You have no categories click Add Category to create one</span>
<% end %>
<div class="add-group-btn">
  <div class="group-btn shadow p-3 mb-5 rounded">

    <%= link_to "Add Category", new_user_group_path(current_user), class: "btn btn-primary" %>
  </div>
</div> 